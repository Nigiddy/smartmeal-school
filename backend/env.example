# ========================================
# SMARTMEAL BACKEND ENVIRONMENT CONFIG
# ========================================

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/smartmeal_db"
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=smartmeal
JWT_AUDIENCE=smartmeal-users

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORTCODE=your_shortcode_here
MPESA_ENVIRONMENT=sandbox # or production
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback
MPESA_TIMEOUT=60000 # 60 seconds
MPESA_RETRY_ATTEMPTS=3

# Security Configuration
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
ENABLE_IMAGE_OPTIMIZATION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10485760 # 10MB
LOG_MAX_FILES=5
ENABLE_REQUEST_LOGGING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ENABLE_EMAIL_NOTIFICATIONS=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
ENABLE_REDIS_CACHE=false

# Admin Default Account
ADMIN_EMAIL=admin@smartmeal.com
ADMIN_PASSWORD=admin123
ADMIN_PHONE=254700000000
ADMIN_NAME=System Administrator

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300000 # 5 minutes
MAX_PAYLOAD_SIZE=10485760 # 10MB

# Monitoring Configuration
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=false
METRICS_PORT=3002
ENABLE_APM=false

# Production Configuration
APP_URL=https://your-domain.com
BACKEND_URL=https://your-backend-domain.com
ENABLE_HTTPS=true
ENABLE_COMPRESSION=true
ENABLE_CACHE=true

# Monitoring & Analytics
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
